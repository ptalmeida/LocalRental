# Kubernetes Secrets Template
# DO NOT commit this file with real values!
# Copy this to secrets.yaml and fill in with actual values
# Then apply with: kubectl apply -f secrets.yaml

---
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  labels:
    app: postgres
type: Opaque
stringData:
  username: postgres
  password: CHANGEME_POSTGRES_PASSWORD

---
apiVersion: v1
kind: Secret
metadata:
  name: api-secret
  labels:
    app: rental-api
type: Opaque
stringData:
  # Database connection string
  # Format: postgres://username:password@postgres:5432/alojamentos?sslmode=disable
  database-url: postgres://postgres:CHANGEME_POSTGRES_PASSWORD@postgres:5432/alojamentos?sslmode=disable

  # Basic Auth credentials
  auth-username: admin
  auth-password: CHANGEME_API_PASSWORD
